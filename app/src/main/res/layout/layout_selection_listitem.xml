<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/transparent"
    android:weightSum="2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageSelection"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@string/todo"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/imageSelection"
                android:layout_toRightOf="@+id/imageSelection"
                android:shadowColor="@android:color/black"
                android:shadowDx="8.8"
                android:shadowDy="8.6"
                android:shadowRadius="8.6"
                android:text="@string/selection"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/txtExtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_name"
                android:layout_toEndOf="@+id/imageSelection"
                android:layout_toRightOf="@+id/imageSelection"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:text="Placeholder"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
</RelativeLayout>